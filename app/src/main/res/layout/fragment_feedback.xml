<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Feedback">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/island_moments"
            android:text="Feedback"
            android:textSize="96sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/edtOften"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="68dp"
            android:ems="10"
            android:hint="How often do you use our app?"
            android:inputType="text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.532"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />

        <EditText
            android:id="@+id/edtMotive"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="What motivates you to use our app?"
            android:inputType="text"
            app:layout_constraintEnd_toEndOf="@+id/edtOften"
            app:layout_constraintStart_toStartOf="@+id/edtOften"
            app:layout_constraintTop_toBottomOf="@+id/edtOften" />

        <EditText
            android:id="@+id/edtImprove"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="What do you want us to improve?"
            android:inputType="text"
            app:layout_constraintEnd_toEndOf="@+id/edtMotive"
            app:layout_constraintStart_toStartOf="@+id/edtMotive"
            app:layout_constraintTop_toBottomOf="@+id/edtMotive" />

        <EditText
            android:id="@+id/edtMessage"
            android:layout_width="223dp"
            android:layout_height="148dp"
            android:layout_marginTop="60dp"
            android:ems="10"
            android:gravity="start|top"
            android:inputType="textMultiLine"
            app:layout_constraintEnd_toEndOf="@+id/edtImprove"
            app:layout_constraintStart_toStartOf="@+id/edtImprove"
            app:layout_constraintTop_toBottomOf="@+id/edtImprove"
            android:background="@drawable/customboarder" />

        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:backgroundTint="#2245FF"
            android:text="Submit"
            app:layout_constraintEnd_toEndOf="@+id/edtMessage"
            app:layout_constraintStart_toStartOf="@+id/edtMessage"
            app:layout_constraintTop_toBottomOf="@+id/edtMessage"
            />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Message"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.452"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edtImprove" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>